{
    "name": "ghost-ruby-dark",
    "description": "A Ghost dark theme",
    "version": "1.6.0",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "authors": [
        "Ghost Foundation",
        "https://github.com/sredevopsdev"
    ],
    "author": {
        "name": "Ghost Foundation, patched by @sredevopsdev",
        "email": "info@sredevops.cl"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "dark"
    ],
    "docs": "https://github.com/sredevopsdev/ghost-ruby-dark",
    "bugs": "https://github.com/sredevopsdev/ghost-ruby-dark/issues",
    "homepage": "https://github.com/sredevopsdev/ghost-ruby-dark",
    "config": {
        "posts_per_page": 12,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 400
            },
            "m": {
                "width": 720
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "navigation_layout": {
                "type": "select",
                "options": [
                    "Logo on the left",
                    "Logo in the middle",
                    "Stacked"
                ],
                "default": "Logo in the middle"
            },
            "title_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "body_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "show_related_posts": {
                "type": "boolean",
                "default": true,
                "group": "post"
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "@tryghost/shared-theme-assets": "2.2.0",
        "autoprefixer": "^10.4.14",
        "beeper": "^2.1.0",
        "cssnano": "6.0.1",
        "gscan": "^4.37.0",
        "gulp": "4.0.2",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.1",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "postcss": "^8.4.24",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.0"
    }
}
